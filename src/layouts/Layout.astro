---
import CircleText from "../components/CircleText";
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>CodeF 2023 - {title}</title>
	</head>
	<body>
		<header
			class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 mb-3 py-60"
		>
			<div class="p-12 flex flex-col justify-center items-center h-full">
				<div class="max-w-sm mx-auto text-center text-white">
					<img src="/logo.png" alt="Logo" class="block" />
				</div>
				<nav
					class="fixed bottom-5 right-0 mx-auto max-w-7xl px-6 lg:px-8"
					aria-label="Top"
				>
				</nav>
			</div>
		</header>

		<slot />
	</body>
</html>
<style>
	:root {
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}
</style>
