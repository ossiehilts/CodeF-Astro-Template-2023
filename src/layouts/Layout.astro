---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>CodeF 2023 - {title}</title>
	</head>
	<body>
		<header class="bg-indigo-900 mb-3">
			<div
				class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 p-12"
			>
				<div class="max-w-sm mx-auto text-center text-white">
					<img src="/logo.png" />
				</div>
				<nav class="mx-auto max-w-7xl px-6 lg:px-8" aria-label="Top">
					<div class="flex w-full py-6 lg:border-none">
						<div class="flex">
							<a href="/"
								><span class="sr-only">Astro Starter</span></a
							>
							<div
								class="ml-10 hidden space-x-8 lg:hidden sm:block"
							>
								<a
									href="/"
									class="text-base font-medium text-white hover:text-indigo-50"
									>Home</a
								>
							</div>
						</div>
					</div>
					<div
						class="flex flex-wrap justify-center gap-x-6 py-4 lg:flex"
					>
						<a
							href="/"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Home
						</a>
						<a
							href="/about"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							About
						</a>
						<a
							href="/kanban"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Kanban
						</a>
						<a
							href="/day-one"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Day 1
						</a>
						<a
							href="/day-two"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Day 2
						</a>
						<a
							href="/day-three"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Day 3
						</a>
						<a
							href="/day-four"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Day 4
						</a>
						<a
							href="/show-case"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Showcase
						</a>
						<a
							href="/games"
							class="text-base font-medium text-white hover:text-indigo-50"
						>
							Games
						</a>
					</div>
				</nav>
			</div>
		</header>
		<slot />
	</body>
</html>
<style>
	:root {
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}
</style>
