---
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import HandCounter from "../components/HandCounter.tsx";
import BinaryCounter from "../components/BinaryCounter.tsx";
---

<Layout title="About">
    <Container>
        <Sectionhead>
            <Fragment slot="title">Day 3</Fragment>
            <Fragment slot="desc">
                Low-Level Computing Concepts & Introduction to Content
                Management Systems
            </Fragment>
        </Sectionhead>
        <div class="max-w-3xl mx-auto p-6 text-gray-700">
            <h3 class="text-xl font-semibold mb-2">Binary Counter</h3>
            <BinaryCounter client:load />
        </div>
        <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12"></div>
    </Container>
</Layout>
