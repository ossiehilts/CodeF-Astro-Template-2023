---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import BusinessCard from "../components/BusinessCard.astro";
import FAQ from "../components/FAQ.astro";
import TextAndImage from "../components/TextAndImage.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<TextAndImage />
		<FAQ />
		<ul role="list" class="link-card-grid">
			<BusinessCard
				name="Oscar Hilton"
				profession="Primary lecturer"
				description="Foobar"
				imageURL="./oscar.jpeg"
			/>
			<BusinessCard
				name="Oscar Hilton"
				profession="Primary lecturer"
				description="Foobar"
				imageURL="./oscar.jpeg"
			/>
		</ul>
		<ul role="list" class="link-card-grid">
			<BusinessCard
				name="Oscar Hilton"
				profession="Primary lecturer"
				description="Foobar"
				imageURL="./oscar.jpeg"
			/>
			<BusinessCard
				name="Oscar Hilton"
				profession="Primary lecturer"
				description="Foobar"
				imageURL="./oscar.jpeg"
			/>
		</ul>
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 80ch;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
