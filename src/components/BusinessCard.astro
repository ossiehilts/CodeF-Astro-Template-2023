---
export interface Props {
	name: string;
	profession: string;
	description: string;
	imageURL: string;
}

const { name, profession, description, imageURL } = Astro.props as Props;
---

<div class="flex items-center p-8 space-x-6">
    <img class="w-32 h-32 rounded-full object-cover" src={imageURL} alt="Team member image">
    <div>
        <h2 class="text-2xl font-bold">{name}</h2>
        <p class="text-gray-500">{profession}</p>
        <p class="mt-2">{description}</p>
    </div>
</div>