---
import WindowBar from "./WindowBar";
const { sandbox, basic = false } = Astro.props;
---

<section
    class="p-6 bg-gradient-to-r from-pink-400 via-red-500 to-yellow-500 text-white my-20 rounded-md"
>
    <div
        class="bg-white rounded-t-lg rounded-b-xl shadow-lg overflow-hidden mx-auto"
    >
        <WindowBar title={`CodeSandbox.io/${sandbox}`} />
        <iframe
            src={`https://codesandbox.io/embed/${sandbox}?view=${
                !basic ? "split" : "preview"
            }&editorsize=50&module=%2Fsrc%2Findex.js&hidenavigation=1&theme=dark`}
            style="width:100%; height:500px; border:0; border-radius: 4px; overflow:hidden;"
            title="Sandbox"
            allow="geolocation; microphone; camera; midi; vr; accelerometer; gyroscope; payment; ambient-light-sensor; encrypted-media; usb"
            sandbox="allow-modals allow-forms allow-popups allow-scripts allow-same-origin"
        >
        </iframe>
    </div>
</section>
