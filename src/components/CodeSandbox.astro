---
const { sandbox, basic = false } = Astro.props;
---

<section
    class="p-6 bg-gradient-to-r from-pink-400 via-red-500 to-yellow-500 text-white rounded-xl shadow-md my-5"
>
    <div class="bg-white rounded-t-lg rounded-b-xl shadow-lg overflow-hidden">
        <div
            class="flex items-center justify-between bg-gray-200 text-gray-500 px-2 py-1"
        >
            <div class="font-mono text-sm">CodeSandbox.io</div>
            <div class="flex space-x-1.5">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
        </div>
        <iframe
            src={`https://codesandbox.io/embed/${sandbox}?view=${
                !basic ? "split" : "preview"
            }&editorsize=50&module=%2Fsrc%2Findex.js&hidenavigation=1&theme=dark`}
            style="width:100%; height:500px; border:0; border-radius: 4px; overflow:hidden;"
            title="Sandbox"
            allow="geolocation; microphone; camera; midi; vr; accelerometer; gyroscope; payment; ambient-light-sensor; encrypted-media; usb"
            sandbox="allow-modals allow-forms allow-popups allow-scripts allow-same-origin"
        >
        </iframe>
    </div>
</section>
