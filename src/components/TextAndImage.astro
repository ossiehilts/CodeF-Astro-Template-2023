---
const { title, content, imageURL } = Astro.props;
---

<div class="mb-6 md:mb-0 my-20 desktop:mb-80">
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  <div class="space-x-0 md:space-x-6 flex flex-wrap md:flex-nowrap">
    <div class="w-full md:w-1/2 mt-4 md:mt-0">
      <p class="text-gray-700 mb-4">{content}</p>
    </div>
    <div class="w-full md:w-1/2">
      <img
        class="w-full h-64 md:h-auto md:w-full object-cover rounded-lg"
        src={imageURL}
        alt={title}
      />
    </div>
  </div>
</div>
